<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JANI_6"
        tools:targetApi="31">

        <!-- Launcher Activity -->
        <activity
            android:name=".gui.launcher.LauncherActivity"
            android:exported="true"
            android:theme="@style/Theme.JANI_6">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- App Activities -->
        <activity android:name=".gui.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.JANI_6"/>

        <activity android:name=".gui.snav.calendar.CalendarActivity"
            android:exported="true"
            android:theme="@style/Theme.JANI_6"/>

        <activity android:name=".gui.snav.equipment.EquipmentActivity"
            android:exported="true"
            android:theme="@style/Theme.JANI_6"/>

        <activity android:name=".gui.snav.exercise.ExerciseActivity"
            android:exported="true"
            android:theme="@style/Theme.JANI_6"/>

        <activity android:name=".gui.snav.goals.GoalsActivity"
            android:exported="true"
            android:theme="@style/Theme.JANI_6"/>

        <activity android:name=".gui.snav.loc_event.LocAndEventActivity"
            android:exported="true"
            android:theme="@style/Theme.JANI_6"/>

        <activity android:name=".gui.snav.settings.SettingsActivity"
            android:exported="true"
            android:theme="@style/Theme.JANI_6"/>

        <activity android:name=".gui.snav.trainingplan.ManagePlansActivity"
            android:exported="true"
            android:theme="@style/Theme.JANI_6"/>

        <activity android:name=".gui.snav.trainingplan.TrainingPlanActivity"
            android:exported="true"
            android:theme="@style/Theme.JANI_6"/>

        <activity android:name=".gui.snav.workout.WorkoutActivity"
            android:exported="true"
            android:theme="@style/Theme.JANI_6"/>

    </application>

</manifest>